    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "request": "launch",
            "name": "Launch Java App",
            "mainClass": "com.helperapp.app.AppApplication",
            "projectName": "app"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Angular App",
            "program": "${workspaceFolder}/Frontend/node_modules/@angular/cli/bin/ng",
            "args": ["serve"],
            "cwd": "${workspaceFolder}/Frontend",
            "console": "integratedTerminal",
            "runtimeExecutable": "node"
        }
    ]
}